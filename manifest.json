{

  "manifest_version": 2,
  "name": "shuffle",
  "description": "A firefox addon that helps with switching proxies by hostname",
  "version": "1.1.3",

  "icons": { "96": "img/icon.png" },

  "browser_specific_settings": {
    "gecko": {
      "id": "shuffle@landius.github.com",
      "strict_min_version": "91.1.0"
    }
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'",

  "permissions": ["proxy", "storage", "privacy", "tabs", "<all_urls>", "webRequest", "webRequestBlocking"]

}
